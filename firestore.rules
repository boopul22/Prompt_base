rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow public read access to user profiles for showing creator info
      allow read: if true;
    }
    
    // Categories collection
    match /categories/{categoryId} {
      // Anyone can read active categories
      allow read: if true;
      
      // Only authenticated users can create, update, delete categories (admin function)
      allow create, update, delete: if request.auth != null;
    }
    
    // Prompts collection - allow all reads for now to fix permissions
    match /prompts/{promptId} {
      // Allow all reads (for development)
      allow read: if true;
      
      // Authenticated users can create prompts
      allow create: if request.auth != null;
      
      // Authenticated users can update and delete prompts
      allow update, delete: if request.auth != null;
    }
  }
}
